# ============================================
# APPLICATION
# ============================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="عقارات السعودية | Saudi Real Estate"

# ============================================
# DATABASE (MySQL)
# ============================================
DATABASE_URL="mysql://root:your_password@localhost:3306/real_estate_db"

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your_super_secret_jwt_key_min_32_chars_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_min_32_chars
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# GOOGLE MAPS
# ============================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ============================================
# FILE UPLOAD
# ============================================
UPLOAD_DIR=./public/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/avif

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ============================================
# ADMIN
# ============================================
ADMIN_EMAIL=admin@realestate.sa
ADMIN_PASSWORD=Admin@123456

# ============================================
# EMAIL (Optional - for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM="Saudi Real Estate <noreply@realestate.sa>"
